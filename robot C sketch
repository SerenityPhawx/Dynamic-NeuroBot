#include "simpletools.h"     
#include "abdrive.h"       
#include "ping.h"

int distance;          

int main()                                    
{
  freqout(4, 1000, 3000);  //pin, duration, frequency
  

  while(1)     //endless loop
  {
    high(26);  //set P26 I/O pin high
    pause(100);  //wait 1/10 second
    low(26);   //set P26 low
    pause(100);
   }
   
  while(1)
  {
    distance = ping_cm(8);
    print("%c distance = %d%c cm", HOME, distance, CLREOL);
    pause(200);
  }           
      
   //drive_goto(256, 256);  //forward 4 wheel turns
   //pause(200);
   //drive_goto(26, -25);  //90deg right turn
   
   
}
